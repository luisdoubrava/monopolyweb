<h1>Players</h1>
<%= button_to 'Welcome', root_path, :method => :get %>
<table>
  <tr>
    <th>Player</th>
    <th>Name</th>
  </tr>

  <% @players.each do |player| %>
      <tr>
        <td>Player <%= player.id %></td>
        <td><%= player.name %></td>
        <td><%= button_to 'Edit', edit_player_path(player), :method => :get %></td>
        <td><%= button_to 'Delete', player_path(player), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
<br>
<%= button_to 'add player', new_player_path, :method => :get %>
<%= button_to 'Delete all players', players_path, method: :delete, data: { confirm: 'Are you sure?' } %>